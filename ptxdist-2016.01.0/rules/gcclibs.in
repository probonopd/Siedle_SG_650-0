## SECTION=core

menu "gcc libraries                 "

config GCCLIBS
	bool
	select BASE if RUNTIME

config GCCLIBS_GCC_S
	bool "libgcc_s"
	select GCCLIBS
	help
	  Installs the libgcc_s Library
	  

config GCCLIBS_CXX
	bool "libstdc++"
	select GCCLIBS
	select GCCLIBS_GCC_S
	select LIBC_M
	help
	  Installs the GNU Standard C++ Library
	  libstdc++


config GCCLIBS_GCJ
	bool "libgcj"
	select GCCLIBS_CXX
	select GCCLIBS_GCC_S
	select LIBC_DL
	select LIBC_M
	select LIBC_PTHREAD
	select LIBC_RT
	help
	  Installs the GNU Java Library
	  libgcj

endmenu
