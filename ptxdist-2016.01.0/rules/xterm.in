## SECTION=multimedia_xorg_app

config XTERM
	tristate
	select XORG_LIB_XAW
	select XORG_LIB_XMU
	select XORG_LIB_XEXT
	select XORG_LIB_XT
	select XORG_LIB_SM
	select XORG_LIB_ICE
	select XORG_LIB_X11
	select NCURSES
	prompt "xterm"
	help
	  The xterm program is the standard terminal emulator for the X
	  Window System.
