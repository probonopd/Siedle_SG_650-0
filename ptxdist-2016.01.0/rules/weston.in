	prompt "OpenGL accelerated compositing"

config WESTON_HEADLESS_COMPOSITOR
	bool
	prompt "headless compositor"

config WESTON_FBDEV_COMPOSITOR
	bool
	prompt "fbdev compositor"

config WESTON_WCAP_TOOLS
	bool
	prompt "wcap tools"
	help
	  Weston CAPture Tools

endif
