## SECTION=multimedia_xorg_app

config XORG_APP_XSETROOT
	tristate
	select XORG_LIB_XMU
	select XORG_LIB_X11
	select XORG_LIB_XAU
	select XORG_LIB_XMU
	select XORG_LIB_XDMCP
	select XORG_LIB_XCURSOR
